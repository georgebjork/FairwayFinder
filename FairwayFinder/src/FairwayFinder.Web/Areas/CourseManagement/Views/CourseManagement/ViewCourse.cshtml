@model FairwayFinder.Core.Features.CourseManagement.Models.ViewModels.CourseViewModel

@{
    ViewData["Title"] = $"{Model.Course.course_name}";
}

<div class="row d-flex justify-content-between">
    <div class="col-auto">
        <h1>@Model.Course.course_name</h1>
    </div>

    <div class="col-auto">
        <a class="btn btn-link me-2" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i> All Courses
        </a>
        <a class="btn btn-link" asp-action="AddTee" asp-route-courseId="@Model.Course.course_id">
            <i class="fa-solid fa-plus"></i> Add Tee Box
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12 mb-0">
        <p class="text-secondary mb-0"> Address: @Model.Course.address</p>
    </div>
    <div class="col-12">
        <p class="text-secondary"> Phone Number: @Model.Course.phone_number</p>
    </div>
</div>

<div class="row">
    <hr/>
</div>




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row d-flex justify-content-between">
                    <div class="col-auto">
                        <h3>Tees</h3>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-primary" asp-action="AddTee" asp-route-courseId="@Model.Course.course_id">
                            <i class="fa-solid fa-plus pe-2"></i> Add Tee Box
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr class="border-b-2 border-neutral">
                        <th>Name</th>
                        <th>Par</th>
                        <th>Course Rating</th>
                        <th>Slope</th>
                        <th>Front 9 Yardage</th>
                        <th>Back 9 Yardage</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var tee in Model.Teeboxes)
                    {
                        <tr>
                            <td>
                                <a asp-action="ViewTeebox"
                                   asp-route-courseId="@tee.course_id"
                                   asp-route-teeboxId="@tee.teebox_id">
                                    @tee.teebox_name
                                </a>
                            </td>
                            <td>@tee.par</td>
                            <td>@tee.rating</td>
                            <td>@tee.slope</td>
                            <td>@tee.yardage_out</td>
                            <td>@tee.yardage_in</td>
                            <td>@tee.yardage_total</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>