@page "/register/{invitation?}"
@model Register

@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center">
    <h2 class="fw-bold my-5">Sign Up</h2>
</div>

<form method="post" id="login-form" hx-boost="false">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    
    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="Email" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Email" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Email" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Email" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div>
        <button id="login-submit" type="submit" class="btn btn-lg btn-primary w-100">Register <i class="fa-solid fa-right-to-bracket ps-2"></i></button>
    </div>
    
</form>