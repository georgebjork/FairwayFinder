@using FairwayFinder.Core.Models
@using FairwayFinder.Web.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FairwayFinder.Core.Features.Scorecards.Models.FormModels.CreateRoundFormModel


<input type="hidden" asp-for="@Model.Course.course_id"/>

<div class="col-6">
    <div class="mb-3">
        <label class="form-label"> Course Name </label>
        <input class="form-control" asp-for="@Model.Course.course_name" disabled/>
    </div>
</div>

<div class="col-6">
    <label class="form-label"> Tee Name</label>
    @if (Model.TeeboxeSelectList.Count <= 0)
    {
        <select class="form-select" asp-for="TeeboxId" asp-items="@Model.TeeboxeSelectList.ToSelectList("No Tees Available", "0")" disabled> </select>

    }
    else
    {
        <select class="form-select" asp-for="TeeboxId" >

            <option value="0"> Select Tee </option>
            @foreach (var t in Model.TeeboxeSelectList)
            {
                <option value="@t.Key"
                        hx-get="@Url.Action("GetTeeboxData", new {teeboxId = int.Parse(t.Key)})"
                        hx-target="#teebox-data"
                        hx-swap="innerHTML"
                        hx-trigger="click">
                    @t.Value
                </option>
            }
        </select> 
    }
    <span asp-validation-for="TeeboxId" class="text-danger"></span>
</div>


