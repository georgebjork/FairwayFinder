

@{
    ViewData["Title"] = "My Scorecards";
}

<div class="row d-flex justify-content-between">
    <div class="col-auto">
        <h1>My Scorecards</h1>
    </div>

    <div class="col-auto">
        <a class="btn btn-primary" asp-controller="Round" asp-action="AddRound">
            <i class="fa-solid fa-plus"></i> Add New Round
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <hr/>
    </div>
</div>


<div class="row d-flex justify-content-end">
    <div class="col-auto">
        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
            <input type="text" class="form-control" placeholder="Search Round"/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @await Html.PartialAsync("_RoundsTable")
    </div>
</div>

