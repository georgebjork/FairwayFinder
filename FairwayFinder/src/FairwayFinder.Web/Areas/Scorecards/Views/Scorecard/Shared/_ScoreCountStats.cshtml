@model FairwayFinder.Core.Features.Scorecards.Models.QueryModels.ScorecardRoundStatsQueryModel

<div class="card">
    <div class="card-header">
        Score Count
    </div>
    <ul class="list-group list-group-flush">
        @*
        @if (Model.hole_in_ones > 0)
        {
            <li class="list-group-item d-flex justify-content-between">
                <div>Hole-in-ones:</div>
                <div>@Model.hole_in_ones</div>
            </li>
        }

        @if (Model.double_eagles > 0)
        {
            <li class="list-group-item d-flex justify-content-between">
                <div>Double Eagles:</div>
                <div>@Model.double_eagles</div>
            </li>
        }
        *@
        
        <li class="list-group-item d-flex justify-content-between">
            <div>Eagles or better:</div>
            <div>@(Model.eagles + Model.double_eagles + Model.hole_in_ones)</div>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <div>Birdies:</div>
            <div>@Model.birdies</div>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <div>Pars:</div>
            <div>@Model.pars</div>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <div>Bogeys:</div>
            <div>@Model.bogies</div>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <div>Doubles:</div>
            <div>@Model.double_bogies</div>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <div>Worse:</div>
            <div>@Model.triple_or_worse</div>
        </li>
    </ul>
</div>