@using FairwayFinder.Core.Models
@using FairwayFinder.Web.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FairwayFinder.Core.Features.Scorecards.Models.FormModels.ScorecardFormModel

<input type="hidden" asp-for="CourseId" value="@Model.Course.course_id"/>

<div class="col-4">
    <div class="mb-3">
        <label class="form-label"> Course Name </label>
        <input class="form-control" asp-for="@Model.Course.course_name" disabled/>
    </div>
</div>

<div class="col-4">
    <div class="mb-3">
        <label class="form-label" asp-for="DatePlayed"> Date Played </label>
        <input class="form-control" type="date" asp-for="DatePlayed"/>
        <span asp-validation-for="DatePlayed"></span>
    </div>
</div>

<div class="col-4">
    <label class="form-label"> Tee Name</label>
    @if (Model.TeeboxSelectList.Count <= 0)
    {
        <select class="form-select" asp-for="TeeboxId" asp-items="@Model.TeeboxSelectList.ToSelectList("No Tees Available", "0")" disabled> </select>

    }
    else
    {
        if (Model.IsUpdate)
        {
            <input type="hidden" asp-for="TeeboxId" value="@Model.TeeboxId"/>
            <select class="form-select" asp-for="TeeboxId" disabled>
                <option value="@Model.TeeboxSelectList[Model.TeeboxId]">
                    @Model.TeeboxSelectList[Model.TeeboxId]
                </option>
            </select>
        }
        else
        {
            <select class="form-select" asp-for="TeeboxId" >

                <option value="0"> Select Tee </option>
                @foreach (var t in Model.TeeboxSelectList)
                {
                    <option value="@t.Key"
                            hx-get="@Url.Action("GetTeeboxData", new {teeboxId = t.Key})"
                            hx-target="#teebox-data"
                            hx-swap="innerHTML"
                            hx-trigger="click">
                        @t.Value
                    </option>
                }
            </select> 
        }
        
    }
    <span asp-validation-for="TeeboxId" class="text-danger"></span>
</div>
