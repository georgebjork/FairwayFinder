@model List<FairwayFinder.Core.Models.Course>

@if (Model.Count > 0)
{
    <div class="dropdown">
        <ul class="dropdown-menu show w-100">
            @foreach (var c in Model)
            { 
                <li>
                    <a class="dropdown-item"
                       hx-get="@Url.Action("GetCourseDataHtmx", new { courseId = c.course_id})"
                       hx-target="#course-information"
                       hx-swap="innerHTML">
                        @c.course_name
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
            }
        </ul>
    </div>
}