@using FairwayFinder.Core.Helpers
@model FairwayFinder.Core.Features.Scorecards.Models.ViewModels.ScorecardsViewModel

<table class="table table-responsive">
    <thead>
    <th>Course Name</th>
    <th>Teebox</th>
    <th>Score</th>
    <th>Slope/Rating</th>
    <th>Date</th>
    </thead>
    
    <tbody>
    @foreach (var r in Model.Rounds)
    {
        <tr>
            <td>@r.course_name</td>
            <td>@r.teebox_name </td>
            <td>@r.score</td>
            <td>@r.slope / @r.rating</td>
            <td>@r.date_played.FormatDate()</td>
        </tr>
    }
    
    </tbody>
</table>

