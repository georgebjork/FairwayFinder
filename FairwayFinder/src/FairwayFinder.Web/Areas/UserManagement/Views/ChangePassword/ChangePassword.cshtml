@using Microsoft.AspNetCore.Components.Web
@model FairwayFinder.Core.Features.UserManagement.Models.FormModels.ChangePasswordFormModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-8 col-sm-12">
        <form hx-post="@Url.Action("ChangePasswordPost")"
              hx-target="#change-password-form"
              hx-swap="innerHTML">

            <div id="change-password-form">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                @await Html.PartialAsync("_ChangePasswordForm", Model)
            </div>

            <div>
                <button id="change-password-submit" type="submit" class="btn btn-lg btn-primary w-100">Change Password</button>
            </div>
            
        </form>
    </div>
</div>