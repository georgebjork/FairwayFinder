@using Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FairwayFinder</title>
    @*Customized Theme*@
    <link rel="stylesheet" href="~/css/bootstrap-themes/bootstrap-lightly.css">
    @*
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-5.3.3-dist/css/bootstrap.css"/>
    Old bootstrap theme
    *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FairwayFinder.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/datatable/datatables.min.css" asp-append-version="true">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.8/dist/cdn.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js" defer="defer"></script>
</head>
<body class="mb-0" hx-boost="true" x-data>
<div class="container-fluid">
    <div class="d-flex">
        <!-- Sidebar -->
        @await Html.PartialAsync("Layout/_Sidebar")

        <!-- Main content -->
        <main class="px-0 flex-grow-1">
            @await Html.PartialAsync("Layout/_Navbar")
            <div class="p-3">
                @await Html.PartialAsync("_MessagePartial")
                @RenderBody()
            </div>
        </main>
    </div>
</div>


