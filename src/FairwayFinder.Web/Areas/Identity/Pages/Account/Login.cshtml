@page
@model Login

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center">
    <h2 class="fw-bold my-5">Sign in to your account</h2>
</div>

<form method="post" id="login-form">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div>
        <button id="login-submit" type="submit" class="btn btn-lg btn-primary w-100">Log in <i class="fa-solid fa-right-to-bracket ps-2"></i></button>
    </div>
</form>


<div class="row mt-4">
    <div class="col-12 d-flex justify-content-center">
        Don't have an account?
        <a class="ms-2 link" href="/register">Sign up!</a>
    </div>
</div>

<div class="row my-2">
    <div class="col-12 d-flex justify-content-center">
        Forgot your password?
        <a class="ms-2 link" href="/Identity/Account/ForgotPassword">Reset here.</a>
    </div>
</div>

